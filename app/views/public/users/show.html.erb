<div class="container mt-5">
  <div class="row">
    
    <!-- プロフィールアイコン -->
    <div class="col-md-4">
      <div class="card position-relative">
        <%= image_tag @user.get_profile_icon, class: 'card-img-top rounded-circle' %>
        <div class="card-body">
          <% if current_user != @user %>
            <% if current_user.blocking?(@user) %>
              <%= link_to "ブロック解除", unblock_path(@user.id), method: :delete, class: 'btn btn-danger btn-block mb-2' %>
            <% else %>
              <%= link_to "ブロックする", block_path(@user.id), method: :post, class: 'btn btn-success btn-block mb-2' %>
            <% end %>
          <% end %>
          <div class="card-bottom-buttons text-center">
            <% if current_user == @user %>
              <%= link_to "ブロックユーザーリスト", blocking_users_user_path(@user), class: 'btn btn-primary btn-block mt-2' %>
              <%= link_to "アイコンを選択", icon_index_user_path, class: 'btn btn-secondary btn-block btn-select-icon mt-2' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- ユーザーネームと自己紹介 -->
    <div class="col-md-8">
      <div class="row">
        <div class="col">
          <h2 class="profile-label mb-3 mt-3">ユーザー名</h2>
        </div>
        <% if current_user == @user %>
          <div class="col-auto">
            <%= button_tag("編集", class: "btn btn-primary mt-3", id: "edit-profile-btn") %>
          </div>
        <% end %>
      </div>

      <h3><%= @user.name %></h3>

      <h2 class="profile-label mt-4">自己紹介</h2>
      <p class="mt-3"><%= @user.introduction %></p>

      <!-- プロフィール編集フォーム -->
      <div id="edit-profile-form" style="display: none;">
        <%= render 'public/users/edit', user: @user %>
      </div>
    </div>
  </div>
</div>
