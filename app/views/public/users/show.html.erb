<div class="container mt-5">
  <div class="row">

    <!-- プロフィール画像 -->
    <div class="col-md-4">
      <div class="card position-relative">
        <%= image_tag 'default-profile-image.jpg', class: 'card-img-top rounded' %>
        <div class="card-body">
          <% if current_user != @user %>
            <% if current_user.blocking?(@user) %>
              <%= link_to "ブロック解除", unblock_path(@user.id), method: :delete, class: 'btn btn-danger btn-block mb-2' %>
            <% else %>
              <%= link_to "ブロックする", block_path(@user.id), method: :post, class: 'btn btn-success btn-block mb-2' %>
            <% end %>
          <% end %>
          <div class="card-bottom-buttons">
          <% if current_user == @user %>
            <%= link_to "ブロックユーザーリスト", blocking_users_user_path(@user), class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
        </div>
      </div>
    </div>

    <!-- ユーザーネームと自己紹介 -->
<div class="col-md-8">
  <div class="d-flex align-items-center">
    <!-- 編集ボタンを名前の左側に配置 -->
    <% if current_user == @user %>
    <%= button_tag("編集", class: "btn btn-primary me-3", id: "edit-profile-btn") %>
    <% end %>
    <h2><%= @user.name %></h2>
  </div>
  <p class="mt-3"><%= @user.introduction %></p>
  <div id="edit-profile-form" style="display: none;">
    <%= render 'public/users/edit', user: @user %>
  </div>
</div>

  </div>
</div>
