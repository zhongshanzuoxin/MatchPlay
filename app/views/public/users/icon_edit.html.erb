<!-- app/views/users/edit.html.erb -->
<%= form_with(model: @user, local: true) do |form| %>
  <% Admin.find_each do |admin| %>
    <%= admin.icons.each do |icon| %>
      <%= image_tag(icon.variant(resize_to_limit: [100, 100])) %>
      <%= radio_button_tag 'user[icon_id]', icon.id, @user.icon&.id == icon.id %>
    <% end %>
  <% end %>
  <%= form.submit "アイコンを設定" %>
<% end %>
