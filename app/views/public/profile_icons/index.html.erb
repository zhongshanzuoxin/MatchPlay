<div class="container mt-5 text-center">
  <h2 class="mb-5">アイコン一覧</h2>

  <div class="row justify-content-center">
    <% if @profile_icons.any? %>
      <% @profile_icons.each do |icon| %>
        <div class="col-6 col-md-3 col-lg-2 mb-3">
          <%= form_with(model: current_user, url: user_profile_icon_path(current_user, icon), method: :patch, local: true) do |form| %>
            <%= label_tag "icon_#{icon.id}" do %>
              <!-- リサイズされた画像のURLを使用して画像を表示 -->
              <%= image_tag(icon.resized_image_url, class: "icon-image rounded-circle", id: "icon_#{icon.id}") %>
              <%= hidden_field_tag 'profile_icon_id', icon.id %>
            <% end %>
            <%= form.submit 'このアイコンを選択', class: 'btn btn-primary mt-2' %>
          <% end %>
        </div>
      <% end %>
      <%= render "layouts/pagy" %>
    <% else %>
      <h4>アイコンがありません。</h4>
    <% end %>
  </div>
</div>
