<div class="container mt-5">
  <h2 class="text-center mb-md-3 mb-lg-5">
    <span class="bg-light p-2">新規登録</span>
  </h2>

  <div class="col-12 col-md-6 mx-auto">
    <%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <label for="name" class="form-label">名前</label>
        <%= f.text_field :name, id: "name", class: "form-control form-floating", autofocus: true, placeholder: "名前" %>
      </div>
      <div class="mb-3">
        <label for "email" class="form-label">メールアドレス</label>
        <%= f.email_field :email, id: "email", class: "form-control form-floating", placeholder: "メールアドレス" %>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">パスワード（6文字以上）</label>
        <%= f.password_field :password, id: "password", class: "form-control form-floating", placeholder: "パスワード" %>
      </div>
      <div class="mb-3 text-center">
        <%= f.submit "新規登録", class: "btn btn-success btn-block col-12 mt-3" %>
      </div>
    <% end %>
  </div>

  <h4 class="text-left ml-5 mb-3">
    <span class="bg-light p-2">既に登録済みの方</span>
  </h4>
  <div class="d-flex ml-4">
    <div class="mx-1"></div>
    <span><%= link_to "こちら", new_user_session_path %>からログインしてください</span>
  </div>
</div>
