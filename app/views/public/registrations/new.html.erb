<div class="container mt-5">
  <h2 class="text-center mb-md-3 mb-lg-5">
    <span class="bg-light p-2">新規登録</span>
  </h2>

  <div class="col-12 col-md-6 mx-auto">
    <%= form_with(model: resource, url: registration_path(resource_name), local: true, html: { class: "was-validated" }) do |f| %>
      <%= render 'public/shared/error_messages', form_object: resource %>

      <div class="mb-3">
        <%= f.label :name, "名前", class: "form-label" %>
        <%= f.text_field :name, class: "form-control form-floating", autofocus: true, placeholder: "名前", required: true, maxlength: 15 %>

        <div class="valid-feedback">OK!</div>
        <div class="invalid-feedback">
          <% if f.object.errors[:name].any? %>
            <%= f.object.errors[:name].to_sentence %>
          <% else %>
            名前を入力してください。
          <% end %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-control form-floating", placeholder: "メールアドレス", required: true %>
        <div class="valid-feedback">OK!</div>
        <div class="invalid-feedback">メールアドレスを入力してください。</div>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %>
        <%= f.password_field :password, class: "form-control form-floating", placeholder: "パスワード", required: true, pattern: ".{6,}", title: "パスワードは6文字以上で入力してください。" %>
        <div class="valid-feedback">OK!</div>
        <div class="invalid-feedback">パスワードは6文字以上で入力してください。</div>
      </div>

      <div class="mb-3 text-center">
        <%= f.submit "新規登録", class: "btn btn-success btn-block col-12 mt-3" %>
      </div>
    <% end %>
  </div>

  <h4 class="text-left ml-5 mb-3">
    <span class="bg-light p-2">既に登録済みの方</span>
  </h4>
  <div class="d-flex ml-4">
    <div class="mx-1"></div>
    <span><%= link_to "こちら", new_user_session_path %>からログインしてください</span>
  </div>
</div>
