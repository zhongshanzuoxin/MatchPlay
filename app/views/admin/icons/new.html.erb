<div class="container mt-5">
  <div class="row justify-content-center"> 
    <div class="col-md-6">
      <h1 class="text-center mb-4">アイコン登録</h1>
      <%= form_with(model: @admin, url: admin_icons_path, method: :post, local: true, html: { class: 'text-center', multipart: true }) do |form| %>
        <div class="mb-3">
          <%= form.label :image, "アイコンを選択", class: "form-label" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>
        <%= form.submit "アップロード", class: "btn btn-primary mt-2" %> 
      <% end %>
    </div>
  </div>
</div>
