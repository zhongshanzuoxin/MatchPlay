<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="display-6 text-center mb-4">タグ管理</h1>

      <!-- タグ追加フォーム -->
      <%= form_with(model: Tag.new, url: admin_tags_path, method: :post, local: true, class: 'mb-5') do |form| %>
        <div class="input-group">
          <%= form.text_field :tag_name, class: 'form-control', placeholder: '新しいタグ名' %>
          <button class="btn btn-primary" type="submit">タグを追加</button>
        </div>
      <% end %>

      <!-- タグリスト表示 -->
      <% if @tags.any? %>
        <ul class="list-group">
          <% @tags.each do |tag| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= tag.tag_name %>
              <%= link_to '削除', admin_tag_path(tag), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="text-center">
          <h4>登録されているタグはありません。</h4>
        </div>
      <% end %>
    </div>
    <%= render "layouts/pagy" %>
  </div>
</div>
