<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">アイコン登録</h1>
      <%= form_with model: @profile_icon, url: admin_profile_icons_path, class: 'text-center', local: true do |form| %>
        <div class="mb-3">
          <%= form.label :image, "アイコンを選択", class: "form-label" %>
          <%= form.file_field :image, name: 'profile_icon[image]', class: "form-control" %>
        </div>
        <%= form.submit "アップロード", class: "btn btn-primary mt-2" %>
      <% end %>
    </div>
  </div>
</div>
