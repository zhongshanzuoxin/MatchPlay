<!DOCTYPE html>
<html>
  <head>
    <title>Default</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JavaScript Bundle CDN (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- "ms-auto" クラスを使用してアイテムを右に寄せる -->
      <ul class="navbar-nav ms-auto me-5">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to 'ユーザー一覧', root_path, class: 'btn btn-dark' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', root_path, class: 'btn btn-dark' %>
          </li>
        <% elsif user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'マイページ', user_path(current_user.id), class: 'btn btn-dark' %>
          </li>
          <li class="nav-item">
            <%= link_to '募集一覧', groups_path, class: 'btn btn-dark' %>
          </li>
          <li class="nav-item">
            <%= link_to '募集する', new_group_path, class: 'btn btn-dark' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-dark" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to '新規登録', new_user_registration_path, class: "btn btn-dark" %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-dark" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

    <%= yield %>
  </body>
</html>
